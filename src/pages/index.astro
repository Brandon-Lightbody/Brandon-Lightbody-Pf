---
import "../styles/global.css"; 
import Layout from "../layouts/base-layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section class="text-center py-20" data-aos="fade-up">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-white">
      Brandon Lightbody
    </h1>
    <p class="text-xl text-gray-400 mb-6">
      Software Developer · Game Tech · Emulator Engineer
    </p>
    <div class="flex justify-center gap-4">
      <a href="https://github.com/Brandon-Lightbody" target="_blank"
        class="bg-white text-black px-4 py-2 rounded hover:bg-gray-200 transition font-semibold"
        >GitHub</a>
      <a href="brandon.lightbody14@gmail.com"
        class="border border-white px-4 py-2 rounded hover:bg-white hover:text-black transition font-semibold"
        >Contact</a>
    </div>
  </section>

  <!-- Tech Demos -->
  <section class="py-10 grid gap-10 md:grid-cols-2">
    <div class="bg-gray-900 p-4 rounded-xl shadow hover:shadow-xl transition border border-gray-800" data-aos="fade-up" data-aos-delay="100">
      <h2 class="text-xl font-semibold mb-2">NES Emulator</h2>
      <iframe
        src="../../public/demos/neska/index.html"
        class="w-full h-[300px] rounded border border-gray-700"
        loading="lazy"
      ></iframe>
    </div>

    <div class="bg-gray-900 p-4 rounded-xl shadow hover:shadow-xl transition border border-gray-800" data-aos="fade-up" data-aos-delay="300">
      <h2 class="text-xl font-semibold mb-2">Game Engine</h2>
      <iframe
        src="../../public/demos/engine-demo/index.html/engine-demo/index.html"
        class="w-full h-[300px] rounded border border-gray-700"
        loading="lazy"
      ></iframe>
    </div>
  </section>

  <!-- Blog Preview -->
  <section class="py-20">
    <h2 class="text-3xl font-bold mb-6 text-center" data-aos="fade-up">Latest Posts</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <article class="bg-gray-900 p-6 rounded-xl border border-gray-800 hover:shadow-xl transition" data-aos="fade-up" data-aos-delay="100">
        <h3 class="text-xl font-semibold mb-2">Designing a Modern Emulator</h3>
        <p class="text-gray-400">Thoughts and lessons from building NESKA from scratch.</p>
        <a href="/blog/emulator-design" class="text-blue-400 hover:underline mt-4 inline-block">Read more</a>
      </article>

      <article class="bg-gray-900 p-6 rounded-xl border border-gray-800 hover:shadow-xl transition" data-aos="fade-up" data-aos-delay="300">
        <h3 class="text-xl font-semibold mb-2">C++ Meets WebAssembly</h3>
        <p class="text-gray-400">Exporting game engine demos to WebGL using Emscripten.</p>
        <a href="/blog/cpp-to-web" class="text-blue-400 hover:underline mt-4 inline-block">Read more</a>
      </article>
    </div>
  </section>
</Layout>
